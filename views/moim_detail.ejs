<body>
  <header>
    <div class="logo">
      <!-- 로고 -->
      <a href="/home">MOiM</a>
    </div>
    <div class="setting">
        <div>
            <span onclick="location.href='/moim/moims'">←</span>
        </div>
    </div>
  </header>
  <section>
    <div class="moim">
      <img src="#" alt=""><br>
      <div style="width: 80vw; display: flex; justify-content: space-between;">
      <h3><%= moim[0].title %></h3>
      <button class="dibsMoim" onclick="DibsMoim()">♡</button>
        </div>
      </div>
        <table>
          <tbody>
            <tr>
                <td id="col1">장소</td>
                <td id="col2"><%= moim[0].location %></td>
            </tr>
            <tr>
                <td id="col1">일시</td>
                <td id="col2"><%= moim[0].even_date %></td>
            </tr>
            <tr>
                <td id="col1">모집 기간</td>
                <td id="col2"><%= moim[0].expiration_date %></td>
            </tr>

            <tr>
                <td id="col1">모집 인원</td>
                <td id="col2"><span><%= detail[0].min %> ~ <%= moim[0].max_people %></span><button type="button" onclick="showPPL('<%=moim[0].moim_id%>')">👥 <%= moimcount[0].moim_count %> </button></td>

            </tr>
            <!-- 참여하는 경우 detail 정보 추가 -->
            <% if (accession == true) { %>
            <tr>
              <td id="col1">내용</td>
              <td id="col2"><%= detail[0].content %></td>
            </tr>
          </tbody>
        </table>
        <!-- <div class="apply"> -->
          <% if (moim[0].nickname == user.nickname ) { %>
            <button class="apply1" onclick="moimset()">모임 삭제</button>
            <button class="apply2" onclick="moimset()">모임 수정</button>
            <% } else { %>
            <button class="apply" onclick="moimset()">모임 탈퇴</button>
            <% } %> <% } else { %>
            <button class="apply" onclick="moimset()">참여하기</button>
            <% } %>
        <!-- </div> -->

    </div>

    <!-- <div class="apply" onclick="apply()">
      <span>참여하기</span>
    </div> -->
